{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web"
    ]
  },
  "engines": {
    "node": "=20.x"
  },
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "start": "NODE_CONFIG_DIR=api/config yarn dev",
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\"",
    "dev:api": "cd api && yarn tsx watch server.ts",
    "dev:web": "cd web && yarn vite dev",
    "migrate": "run-s -c migrate:clean migrate:dev gen:types",
    "migrate:clean": "rm -rf api/db/migrations api/db/dev.db*",
    "migrate:dev": "node scripts/migrate.js init",
    "gen:types": "cd api && yarn prisma generate",
    "build": "yarn build:api && yarn build:web",
    "build:api": "cd api && yarn tsc",
    "build:web": "cd web && yarn vite build",
    "test": "cd api && yarn vitest run"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.22.0",
    "commander": "^14.0.0",
    "concurrently": "^9.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "resolutions": {
    "@storybook/react-dom-shim@npm:7.6.17": "https://verdaccio.tobbe.dev/@storybook/react-dom-shim/-/react-dom-shim-8.0.8.tgz",
    "prisma": "6.2.1",
    "@prisma/client": "6.2.1",
    "@prisma/engines": "6.2.1",
    "@prisma/debug": "6.2.1",
    "@prisma/fetch-engine": "6.2.1",
    "@prisma/generator-helper": "6.2.1",
    "@prisma/get-platform": "6.2.1",
    "@prisma/internals": "6.2.1",
    "@prisma/schema-files-loader": "6.2.1"
  }
}
