{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "rootDir": "./src"
  },
  "include": [
    "src/lib/**/*",
    "src/server/api/**/*"
  ],
  "exclude": [
    "src/app/**/*",
    "src/trpc/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}