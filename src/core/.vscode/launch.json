{
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug C++ for Core Client",
      "program": "bun",
      "args": [
        "../client/src/bin.ts",
        "commit",
        "-m",
        "remove hello",
        "--longtail-log-level",
        "debug",
      ],
      "cwd": "${workspaceFolder}/wk",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder}/client/config"
      }
    },
    {
      "name": "Debug C++ in Backend Server",
      "type": "lldb",
      "request": "launch",
      "program": "bun",
      "args": [
        "server/src/index.ts"
      ],
      "cwd": "${workspaceFolder:Core}",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder:Core}/server/config"
      }
    },
  ]
}
