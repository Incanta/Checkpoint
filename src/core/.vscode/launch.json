{
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch CodeLLDB",
      "program": "bun",
      "args": [
        "../client/src/bin.ts",
        "commit",
        "-m",
        "remove hello",
        "--longtail-log-level",
        "debug",
      ],
      "cwd": "${workspaceFolder}/wk",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder}/client/config"
      }
    }
  ]
}
