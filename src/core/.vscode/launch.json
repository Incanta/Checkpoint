{
  "configurations": [
    {
      "name": "Attach Server",
      "port": 9230,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "localRoot": "${workspaceFolder}/server"
    },
    {
      "name": "Attach Daemon",
      "port": 9231,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "localRoot": "${workspaceFolder}/daemon"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug C++ for Daemon",
      "program": "c:/Program Files/nodejs/node.exe",
      "args": [
        "--inspect=0.0.0.0:9231",
        "lib/bin.js"
      ],
      "cwd": "${workspaceFolder}/daemon",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder}/daemon/config"
      },
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    },
    {
      "name": "Backend",
      "type": "lldb",
      "request": "launch",
      "program": "c:/Users/seese/.bun/bin/bun",
      "args": [
        "server/src/index.ts"
      ],
      "cwd": "${workspaceFolder:Core}",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder:Core}/server/config"
      }
    }
  ],
  "compounds": [
    {
      "name": "Attach Core",
      "configurations": [
        "Attach Daemon",
        "Attach Server"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    }
  ]
}
