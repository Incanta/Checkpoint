{
  "exclude": ["./jest.config.ts", "./dist"],
  "compilerOptions": {
    "incremental": true,
    "composite": true,

    "target": "esnext",

    "module": "commonjs",
    "rootDir": "./packages",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@checkpointvcs/*": ["./packages/*/src/index.ts"]
    },
    "typeRoots": ["./types", "node_modules/@types"],

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
