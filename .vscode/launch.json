{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Downsync",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],

      "args": ["src/downsync.ts"],

      "cwd": "${workspaceRoot}/src/longtail/addon",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"]
    },
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Downsync C++",
      "program": "C:\\Program Files\\nodejs\\node.exe",
      "args": [
        "--nolazy",
        "-r",
        "ts-node/register/transpile-only",
        "src/downsync.ts"
      ],
      "cwd": "${workspaceRoot}/src/longtail/addon",
      "symbolOptions": {
        "searchPaths": [
          "D:\\work\\checkpoint\\src\\longtail\\addon\\src\\longtail\\win32_x64\\debug"
        ],
        "searchMicrosoftSymbolServer": false
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest All (Desktop)",
      "runtimeExecutable": "${workspaceFolder}/src/desktop/node_modules/.bin/electron",
      "program": "${workspaceFolder}/src/desktop/node_modules/jest/bin/jest",
      "args": [
        "--silent",
        "--config",
        "${workspaceFolder}/src/desktop/app/jest.unit.config.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "ELECTRON_RUN_AS_NODE": "1"
      },
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/src/desktop/node_modules/.bin/electron.cmd"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current (Desktop)",
      "runtimeExecutable": "${workspaceFolder}/src/desktop/node_modules/.bin/electron",
      "program": "${workspaceFolder}/src/desktop/node_modules/jest/bin/jest",
      "args": [
        "--silent",
        "--config",
        "${workspaceFolder}/src/desktop/app/jest.unit.config.js",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "ELECTRON_RUN_AS_NODE": "1"
      },
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/src/desktop/node_modules/.bin/electron.cmd"
      }
    }
  ]
}
